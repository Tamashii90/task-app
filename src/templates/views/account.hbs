<div class="profile">
    <div class="avatarContainer">
        {{#if hasAvatar}}
        <img class="avatarImg" src='/users/me/avatar' />
        {{else}}
        <img src='https://i.imgur.com/F9cRyax.png' />
        {{/if}}
        <form action="/users/me/avatar" id="deleteAvForm">
            <input type="submit" value="Reset Profile Picture">
        </form>
    </div>
    <hr>
    <table id="profileTable">
        <form action="/users/me/" enctype="multipart/form-data" id="profileForm"></form>
        <tr>
            <td><label>Username </td>
            <td><input size="30" type="text" name="name" id="" form="profileForm" value="{{profile.name}}"></label></td>
        </tr>
        <tr>
            <td><label>Email </td>
            <td><input size="30" type="text" name="email" id="" form="profileForm" value="{{profile.email}}"></label>
            </td>
        </tr>
        <tr>
            <td><label>New Password </td>
            <td><input size="30" type="password" name="password" id="" form="profileForm"></label></td>
        </tr>
        <tr>
            <td><label>Verify New Passowrd </td>
            <td><input size="30" type="password" name="pwdVerif" id="" form="profileForm"></label></td>
        </tr>
        <tr>
            <td><label>Joined</label></td>
            <td>{{profile.createdAt}}</label></td>
        </tr>
        <tr>
            <td>
                Upload a profile picture
            </td>
            <td>
                <input type="file" id="avatarFile" name="avatar" form="profileForm">
            </td>
        </tr>
        <tr>
            <td><input type="submit" form="profileForm" value="Save Changes"></td>
        </tr>
        <tr>
            <td colspan="2">
                <hr>
            </td>
        </tr>
        </form>
        <tr>
            <td>
                <form action="/users/logoutall" method="POST">
                    <button>Log Out From All Sessions</button>
                </form>
            </td>
        </tr>
        <tr>
            <td>
                <form action="/users/me" id="deleteAcct">
                    <button>DELETE ACCOUNT</button>
                </form>
            </td>
        </tr>
    </table>
</div>