<div class="profile">
    <div class="level">
        <div class="level-left">
            <span class="level-item">
                {{#if hasAvatar}}
                <img class="avatarImg" src='/users/me/avatar' />
                {{else}}
                <img src='https://i.imgur.com/F9cRyax.png' />
                {{/if}}
            </span>
        </div>
        <div class="level-right">
            <form class="level-item" action="/users/me/avatar" id="deleteAvForm">
                <input type="submit" value="Reset Profile Picture">
            </form>
        </div>
    </div>
    <hr>
    <table id="profileTable">
        <form action="/users/me/" enctype="multipart/form-data" id="profileForm">
            <tr>
                <td><label>Username</label></td>
                <td><input size="30" type="text" name="name" id="" form="profileForm" value="{{profile.name}}">
                    <span class="help is-danger">{{error.errors.name.message}}</span>
                </td>
            </tr>
            <tr>
                <td><label>Email</label></td>
                <td>
                    <input size="30" type="email" name="email" id="" form="profileForm" value="{{profile.email}}">
                    <span class="help is-danger">{{error.errors.email.message}}</span>
                </td>
            </tr>
            <tr>
                <td><label>New Password</label></td>
                <td>
                    <input size="30" type="password" name="password" id="" form="profileForm">
                    <span class="help is-danger">{{error.errors.password.message}}</span>
                </td>
            </tr>
            <tr>
                <td><label>Verify New Passowrd</label></td>
                <td>
                    <input size="30" type="password" name="pwdVerif" id="" form="profileForm">
                    <span class="help is-danger">{{error.errors.pwdVerif.message}}</span>
                </td>
            </tr>
            <tr>
                <td><label>Joined</label></td>
                <td>{{profile.createdAt}}</td>
            </tr>
            <tr>
                <td>Upload a profile picture</td>
                <td><input type="file" id="avatarFile" name="avatar" form="profileForm"></td>
            </tr>
            <tr>
                <td><input type="submit" form="profileForm" value="Save Changes"></td>
            </tr>
            <tr>
                <td colspan="2">
                    <hr>
                </td>
            </tr>
        </form>
        <tr>
            <td>
                <form action="/users/logoutall" method="POST">
                    <button>Log Out From All Sessions</button>
                </form>
            </td>
        </tr>
        <tr>
            <td>
                <form action="/users/me" id="deleteAcct">
                    <button>DELETE ACCOUNT</button>
                </form>
            </td>
        </tr>
    </table>
</div>